<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LaundryHub Reset Password</title>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica,
          Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji',
          'Segoe UI Symbol';
        margin: 0;
        padding: 0;
      }
      .navbar {
        display: flex;
        align-items: center;
        height: 4.4rem;
        width: 100%;
        padding-left: 2rem;
        box-shadow: 0px 2px 3px lightgray;
        position: fixed;
        top: 0;
      }
      .title {
        color: #584bac;
        text-decoration: none;
        font-weight: 600;
        font-size: 2.7rem;
      }
      .main_container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        margin-top: 6rem;
      }
      .form_container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 50%;
        padding: 0;
      }
      .form {
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 2px solid #ce1567;
        border-radius: 1rem;
        padding: 2rem;
        gap: 2rem;
        /* background-color: orange; */
      }
      .form_heading {
        font-size: 2rem;
        font-weight: 600;
      }
      .submit_btn {
        color: #ffffff;
        background-color: #ce1567;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 0.7rem 2rem;
        border-radius: 0.5rem;
        border: none;
      }
      .input {
        font-size: 1rem;
        background-color: #ecedf6;
        border: none;
        width: 20rem;
        border-radius: 0.5rem;
        padding: 0.7rem;
        margin-top: 0.5rem;
        &:focus {
          outline: 2px solid #ce1567;
        }
      }
      label {
        font-size: 1.1rem;
      }
    </style>
    <script>
      var status = '<%- JSON.stringify(status) %>';
      var error = '<%- JSON.stringify(error) %>';
      if (JSON.parse(status) == 'verified') {
        alert('Password reset successful');
        window.location.href = 'http://localhost:5173/login';
      }
      if (JSON.parse(error) != '') {
        alert(JSON.parse(error));
      }
    </script>
  </head>
  <body>
    <nav class="navbar">
      <div>
        <a href="http://localhost:5173" class="title" target="_blank">
          LaundryHub
        </a>
      </div>
    </nav>
    <div class="main_container">
      <div class="form_container">
        <div>
          <p class="form_heading">Reset Password</p>
        </div>
        <form action="" method="post" class="form">
          <div>
            <label for="password">Password</label><br />
            <input
              type="password"
              id="password"
              class="input"
              name="password"
              placeholder="Password"
            />
          </div>
          <button type="submit" class="submit_btn">Submit</button>
        </form>
      </div>
    </div>
  </body>
</html>
